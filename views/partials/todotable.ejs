<div class="container">
	<div class="row no-gutters">
		<div class="col-lg-8 col-md-10 col-sm-11 offset-lg-2 offset-md-1 mb-4">
			<form method="POST" action="/addtodo" class="form-inline pb-2 ml-4">
				<label class="col-form-label col-form-label-lg" for="inputToDo">
					Add New ToDo:
				</label>
				<input
					class="form-control form-control-lg ml-2"
					type="text"
					placeholder="Enter New ToDo"
					id="inputToDo"
					name="task"
				/>
				<button
					id="addtodo"
					class="btn btn-secondary btn-lg ml-2 my-2 my-sm-0"
					type="submit"
				>
					Add ToDo
				</button>
			</form>
		</div>
	</div>
	<div class="row no-gutters">
		<div class="col-lg-8 col-md-10 col-sm-11 offset-lg-2 offset-md-1">
			<table class="table table-striped table-dark">
				<thead>
					<tr class="table-primary">
						<th scope="col">Id:</th>
						<th scope="col">Done:</th>
						<th scope="col">ToDo:</th>
						<th scope="col" class="text-center">Delete</th>
					</tr>
				</thead>
				<tbody id="todobody"></tbody>
			</table>
		</div>
	</div>
</div>
